{
  "name": "rc-charts",
  "version": 2,
  "builds": [
    {
      "src": "build.sh",
      "use": "@now/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "src": "^/public/(.*)", "dest": "/public/$1" },
    { "src": "^/.*", "dest": "/index.html" }
  ]
}
